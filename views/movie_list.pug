extends layout

block content
  h1= title

  ul
    - movie_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each movie in movie_list
      li(class='movie-section')      
        a(href=movie.url)
          h3 #{movie.title}
          p #{movie.summary}
          p #{movie.year}
          img(src=movie.imageUrl class='movie-pic')
          p #[strong Genre:] #{movie.genre.name} 

    else
      li There are no books.